{
    "name": "thinktomorrow/squanto",
    "type": "library",
    "description": "Text manager for static laravel translations during and after development",
    "keywords": [
        "thinktomorrow",
        "squanto"
    ],
    "homepage": "https://github.com/thinktomorrow/squanto",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Cavens",
            "email": "cavensben@gmail.com",
            "homepage": "http://thinktomorrow.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "dimsav/laravel-translatable": "~5.4|6.0",
        "illuminate/contracts": "~5.2.0|~5.3.0",
        "illuminate/database": "~5.2.0|~5.3.0",
        "illuminate/support": "~5.2.0|~5.3.0",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "5.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "orchestra/testbench": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
