{
    "name": "thinktomorrow/squanto",
    "type": "library",
    "description": "Text manager for static laravel translations during and after development",
    "keywords": [
        "thinktomorrow",
        "squanto"
    ],
    "homepage": "https://github.com/thinktomorrow/squanto",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Cavens",
            "email": "ben@thinktomorrow.be",
            "homepage": "https://thinktomorrow.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/contracts": "~8.12|~9.11",
        "illuminate/database": "~8.12|~9.11",
        "illuminate/support": "~8.12|~9.11",
        "league/flysystem": "~3.0",
        "thinktomorrow/dynamic-attributes": "^0.4.1",
        "ext-json": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "nunomaduro/larastan": "^0.7.12",
        "orchestra/testbench": "^7.5",
        "phpunit/phpunit": "^9.5",
        "spatie/temporary-directory": "^1.1",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thinktomorrow\\SquantoTests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Thinktomorrow\\Squanto\\SquantoServiceProvider",
                "Thinktomorrow\\Squanto\\SquantoManagerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
