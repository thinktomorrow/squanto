{
    "name": "thinktomorrow/squanto",
    "type": "library",
    "description": "Text manager for static laravel translations during and after development",
    "keywords": [
        "thinktomorrow",
        "squanto"
    ],
    "homepage": "https://github.com/thinktomorrow/squanto",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Cavens",
            "email": "ben@thinktomorrow.be",
            "homepage": "https://thinktomorrow.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4.7",
        "ezyang/htmlpurifier": "^4.11",
        "illuminate/contracts": "~7.15",
        "illuminate/database": "~7.15",
        "illuminate/support": "~7.15",
        "league/flysystem": "~1.0",
        "thinktomorrow/dynamic-attributes": "dev-master@dev"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "spatie/temporary-directory": "^1.1",
        "thinktomorrow/trap": "^0.1.3",
        "vimeo/psalm": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thinktomorrow\\SquantoTests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Thinktomorrow\\Squanto\\SquantoServiceProvider",
                "Thinktomorrow\\Squanto\\SquantoManagerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
