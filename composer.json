{
    "name": "thinktomorrow/squanto",
    "type": "library",
    "description": "Text manager for static laravel translations during and after development",
    "keywords": [
        "thinktomorrow",
        "squanto"
    ],
    "homepage": "https://github.com/thinktomorrow/squanto",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Cavens",
            "email": "cavensben@gmail.com",
            "homepage": "http://thinktomorrow.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "astrotomic/laravel-translatable": "^11.3",
        "ezyang/htmlpurifier": "^4.11",
        "illuminate/contracts": "~5.7|~5.8|~6.0",
        "illuminate/database": "~5.7|~5.8|~6.0",
        "illuminate/support": "~5.7|~5.8|~6.0",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.7",
        "orchestra/testbench": "~3.6.0|~3.7.0|~4.0.0",
        "phpunit/phpunit": "7.0",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thinktomorrow\\Squanto\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Thinktomorrow\\Squanto\\SquantoServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
